@model List<HelpRequestResponse>

<h2>My Help Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="100" />
                    }
                </td>
                <td>@(item.IsApproved ? "Approved" : "Pending")</td>
            </tr>
        }
    </tbody>
</table>
