@model CharityConnect.MVC.Models.AdminReportViewModel

<h2>📊 Admin Report</h2>

<div class="report-cards">
    <div class="card">
        <h3>Total Users</h3>
        <p>@Model.TotalUsers</p>
    </div>
    <div class="card">
        <h3>Total Donations</h3>
        <p>@Model.TotalDonations</p>
    </div>
    <div class="card">
        <h3>Total Help Requests</h3>
        <p>@Model.TotalHelpRequests</p>
    </div>
</div>

<style>
    .report-cards {
        display: flex;
        gap: 20px;
    }

    .card {
        background: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        width: 200px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .card h3 {
        margin-bottom: 10px;
    }
</style>
